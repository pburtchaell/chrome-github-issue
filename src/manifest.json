{
  "manifest_version": 2,
  "name": "GitHub Issue Number Rearranger",
  "short_name": "GitHub Issue Rearranger",
  "description": "Reference GitHub issue numbers without switching tabs",
  "homepage_url": "https://github.com/pburtchaell/chrome-github-issue",
  "version": "0.0.1",
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "GitHub Issue Rearranger"
  },
  "content_scripts": [
    {
    "matches": ["https://*.github.com/*/*/issues/*"],
    "js": ["background.js"]
    }
  ],
  "permissions": [
    "tabs",
    "debugger"
  ]
}
